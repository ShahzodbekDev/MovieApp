<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@+id/loginFragment">

    <fragment
        android:id="@+id/navigation_home"
        android:name="shahzoddev.mobile.moviesapp.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="shahzoddev.mobile.moviesapp.ui.dashboard.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="shahzoddev.mobile.moviesapp.ui.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" />

    <fragment
        android:id="@+id/splashFragment"
        android:name="shahzoddev.mobile.moviesapp.ui.splash.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash" >
        <action
            android:id="@+id/action_splashFragment_to_onBoardingFirstFragment"
            app:destination="@id/onBoardingFirstFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/onBoardingFirstFragment"
        android:name="shahzoddev.mobile.moviesapp.ui.onboarding.OnBoardingFirstFragment"
        android:label="fragment_onboarding_first"
        tools:layout="@layout/fragment_onboarding_first" >
        <action
            android:id="@+id/action_onBoardingFirstFragment_to_onBoardingSecondFragment"
            app:destination="@id/onBoardingSecondFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/onBoardingSecondFragment"
        android:name="shahzoddev.mobile.moviesapp.ui.onboarding.OnBoardingSecondFragment"
        android:label="fragment_onboarding_second"
        tools:layout="@layout/fragment_onboarding_second" >
        <action
            android:id="@+id/action_onBoardingSecondFragment_to_onBoardingThirdFragment"
            app:destination="@id/onBoardingThirdFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/onBoardingThirdFragment"
        android:name="shahzoddev.mobile.moviesapp.ui.onboarding.OnBoardingThirdFragment"
        android:label="fragment_onboarding_third"
        tools:layout="@layout/fragment_onboarding_third" >
        <action
            android:id="@+id/action_onBoardingThirdFragment_to_onBoardingFourthFragment"
            app:destination="@id/onBoardingFourthFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/onBoardingFourthFragment"
        android:name="shahzoddev.mobile.moviesapp.ui.onboarding.OnBoardingFourthFragment"
        android:label="fragment_onboarding_fourth"
        tools:layout="@layout/fragment_onboarding_fourth" >
        <action
            android:id="@+id/action_onBoardingFourthFragment_to_onBoardingFifthFragment"
            app:destination="@id/onBoardingFifthFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/onBoardingFifthFragment"
        android:name="shahzoddev.mobile.moviesapp.ui.onboarding.OnBoardingFifthFragment"
        android:label="fragment_onboarding_fifth"
        tools:layout="@layout/fragment_onboarding_fifth" >
        <action
            android:id="@+id/action_onBoardingFifthFragment_to_onBoardingSixthFragment"
            app:destination="@id/onBoardingSixthFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/onBoardingSixthFragment"
        android:name="shahzoddev.mobile.moviesapp.ui.onboarding.OnBoardingSixthFragment"
        android:label="fragment_onboarding_sixth"
        tools:layout="@layout/fragment_onboarding_sixth" >
        <action
            android:id="@+id/action_onBoardingSixthFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="shahzoddev.mobile.moviesapp.ui.login.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="shahzoddev.mobile.moviesapp.ui.register.RegisterFragment"
        android:label="fragment_register"
        tools:layout="@layout/fragment_register" >
        <action
            android:id="@+id/action_registerFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />
        <action
            android:id="@+id/action_registerFragment_to_pickAvatarFragment"
            app:destination="@id/pickAvatarFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/pickAvatarFragment"
        android:name="shahzoddev.mobile.moviesapp.ui.register.PickAvatarFragment"
        android:label="fragment_pickavatar"
        tools:layout="@layout/fragment_pickavatar" />
</navigation>